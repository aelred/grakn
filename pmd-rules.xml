<?xml version="1.0"?>
<ruleset name="grakn"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd
http://pmd.sourceforge.net/ruleset/2.0.0 ">
    <description>Grakn PMD ruleset</description>

    <rule ref="rulesets/java/basic.xml"/>

    <rule ref="rulesets/java/empty.xml"/>

    <!-- No redundant imports -->
    <rule ref="rulesets/java/imports.xml">

        <!-- This is fine because we don't use '*' imports -->
        <exclude name="TooManyStaticImports"/>

    </rule>

    <!-- Any entirely redundant things, such as `this` -->
    <rule ref="rulesets/java/unnecessary.xml">

        <!-- Unnecessary parentheses can make code clearer -->
        <exclude name="UselessParentheses"/>

    </rule>

    <rule ref="rulesets/java/unusedcode.xml"/>

</ruleset>